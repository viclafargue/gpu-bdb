ARG CUDA_VER="11.8.0"
ARG LINUX_VER="ubuntu22.04"
ARG PY_VER="3.10"
FROM rapidsai/mambaforge-cuda:cuda${CUDA_VER}-base-${LINUX_VER}-py${PY_VER}

RUN apt-get update && apt-get install -y \
    libgl1-mesa-dev \
    libxext-dev \
    libxi-dev \
    libxrender-dev \
    libxt-dev \
    libxtst-dev \
    && rm -rf /var/lib/apt/lists/*

COPY . /opt/gpu-xb-ai/

WORKDIR /opt/gpu-xb-ai/

RUN /bin/bash setup-python.sh

ENTRYPOINT [ "mamba", "run", "--prefix", "lib/python-venv", "./run_benchmark.sh" ]
